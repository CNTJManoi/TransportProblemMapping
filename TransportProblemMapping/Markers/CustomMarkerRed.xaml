<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="TransportProblemMapping.Markers.CustomMarkerRed"
    Height="40" Width="30" Opacity="10">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem x:Name="DeleteMenu" Header="Удалить" Click="DeleteMenu_Click">
                <MenuItem.Icon>
                    <Image Source="trash.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem x:Name="EditMenu" Header="Редактировать" Margin="0,5,0,0" Click="EditMenu_Click">
                <MenuItem.Icon>
                    <Image Source="pencil.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </UserControl.ContextMenu>
    <Image Name="Icon" Source="red-dot.png" VerticalAlignment="Center" HorizontalAlignment="Center" />
</UserControl>